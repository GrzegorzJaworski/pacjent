{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Patients</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('new') }}" class="btn btn-sm btn-outline-secondary">
                <span data-feather="plus-circle"></span>
                Add
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <td>Id</td>
                <td>ImiÄ™ Nazwisko</td>
                <td>Pesel</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            {% for patient in patients %}
                <tr>
                    <td>{{ patient.patientId }}</td>
                    <td>{{ patient.name }} {{ patient.surname }}</td>
                    <td>{{ patient.pesel }}</td>
                    <td>
                        <a href="{{ path('edit', {'id': patient.id}) }}" ><i class="fas fa-edit"></i></a>
                        <a class="text-danger remove" href="{{ path('remove', {'id': patient.id}) }}" ><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block javascripts %}
    <script>
        $(".remove").click(function(){
            if (!confirm("Do you want to delete")){
                return false;
            }
        });
    </script>
{% endblock %}